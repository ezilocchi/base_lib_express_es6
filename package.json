{
  "name": "base_lib_express_es6",
  "version": "0.0.0-development",
  "description": "A base structure to build a javascript library",
  "main": "index.js",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "istanbul cover -x ./test/* _mocha -- -R spec test/",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/igiagante/base_lib_express_es6.git"
  },
  "keywords": [
    "express",
    "mongoose",
    "es6",
    "boilerplate"
  ],
  "author": "Ignacio Giagante <igiagante@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/igiagante/base_lib_express_es6/issues"
  },
  "homepage": "https://github.com/igiagante/base_lib_express_es6#readme",
  "czConfig": {
    "path": "./node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test && npm run check-coverage"
    }
  },
  "devDependencies": {
    "chai": "3.5.0",
    "codecov": "2.1.0",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "ghooks": "2.0.0",
    "istanbul": "0.4.5",
    "mocha": "3.2.0",
    "semantic-release": "^6.3.2"
  }
}
